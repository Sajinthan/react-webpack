{
  "printWidth": 120,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "avoid",
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": ["**/*.scss"],
      "options": {
        "printWidth": 1000
      }
    },
    {
      "files": ["**/*.html", "**/*.ejs"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
